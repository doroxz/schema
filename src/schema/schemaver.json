{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "https://schema.linterhub.com/schemaver.json#",
    "$version": "0.0.0",
    "title": "Versioned Schema",
    "description": "The meta-schema of versioned JSON schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "http://json-schema.org/draft-06/schema#"
        },
        {
            "$ref": "#/definitions/object"
        }
    ],
    "definitions": {
        "reference": {
            "title": "Reference",
            "description": "The reference in URI format",
            "type": "string",
            "format": "uri"
        },
        "version": {
            "title": "Version",
            "description": "The version",
            "type": "string",
            "examples": [
                "0.0.1",
                "beta",
                "sierra",
                "1.0.0"
            ]
        },
        "semantic": {
            "$ref": "#/definitions/version",
            "description": "The semantic version",
            "pattern": "^[0-9]+.[0-9]+.[0-9]+$",
            "examples": [
                "1.0.0",
                "2.2.2"
            ]
        },
        "schema": {
            "$ref": "http://json-schema.org/draft-06/schema#",
            "title": "JSON Schema",
            "description": "The meta-schema of JSON schema"
        },
        "object": {
            "title": "Versioned Object",
            "description": "The versioned object",
            "type": "object",
            "properties": {
                "$version": {
                    "$ref": "#/definitions/semantic"
                },
                "$schema": {
                    "$ref": "#/definitions/reference",
                    "title": "Schema",
                    "description": "The parent schema uri"
                }
            },
            "required": [
                "$schema",
                "$version"
            ]
        }
    }
}
