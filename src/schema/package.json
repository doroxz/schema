{
    "$schema": "https://schema.linterhub.com/schemaver.json#",
    "$id": "https://schema.linterhub.com/package.json#",
    "$version": "0.0.0",
    "title": "Software package",
    "description": "The meta information about software package",
    "type": "object",
    "allOf": [
        {
            "$ref": "./schemaver.json#/definitions/object"
        },
        {
            "$ref": "#/definitions/meta"
        },
        {
            "$ref": "./types.json#/definitions/license"
        }
    ],
    "required": [
        "license"
    ],
    "definitions": {
        "id": {
            "$ref": "./schemaver.json#/definitions/referece",
            "title": "Id",
            "description": "The unique identifier of software package",
            "examples": [
                "https://catalog.literhub.com/dummy/package.json"
            ]
        },
        "name": {
            "title": "Name",
            "description": "The name of the software package",
            "type": "string"
        },
        "meta": {
            "title": "Software metapackage",
            "description": "The meta information about software package",
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/definitions/id"
                },
                "name": {
                    "$ref": "#/definitions/name"
                },
                "description": {
                    "title": "Description",
                    "description": "The textual description of the package",
                    "type": "string"
                },
                "version": {
                    "$ref": "./schemaver.json#/definitions/version"
                },
                "url": {
                    "title": "URL",
                    "description": "The web page of the package",
                    "$ref": "./types.json#/definitions/url"
                }
            },
            "required": [
                "id",
                "name"
            ]
        },
        "ref": {
            "title": "Reference",
            "description": "The reference to software package",
            "type": "object",
            "properties": {
                "manager": {
                    "$ref": "./types.json#/definitions/manager",
                    "title": "Manager",
                    "description": "The name of package manager"
                },
                "package": {
                    "$ref": "#/definitions/name"
                },
                "version": {
                    "title": "Version(s)",
                    "description": "The version or array of versions",
                    "oneOf": [
                        {
                            "$ref": "./schemaver.json#/definitions/version"
                        },
                        {
                            "title": "Versions",
                            "description": "The array of versions",
                            "type": "array",
                            "items": {
                                "$ref": "./schemaver.json#/definitions/version"
                            }
                        }
                    ]
                }
            },
            "required": [
                "manager",
                "package"
            ]
        }
    }
}
