{
    "$schema": "https://schema.linterhub.com/schemaver.json#",
    "$id": "https://schema.linterhub.com/deps.json#",
    "$version": "0.0.0",
    "title": "Software package dependencies",
    "description": "The dependencies of the software package",
    "type": "object",
    "allOf": [
        {
            "$ref": "./schemaver.json#/definitions/object"
        },
        {
            "$ref": "#/definitions/deps"
        }
    ],
    "definitions": {
        "deps": {
            "title": "Dependencies",
            "description": "The dependencies of software package",
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "./package.json#/definitions/id"
                },
                "oneOf": {
                    "$ref": "#/definitions/oneOf"
                }
            },
            "required": [
                "id",
                "oneOf"
            ]
        },
        "oneOf": {
            "title": "Any",
            "description": "The array of conditions where at least one should pass",
            "type": "array",
            "items": {
                "$ref": "#/definitions/allOf"
            },
            "uniqueItems": true,
            "minItems": 1
        },
        "allOf": {
            "title": "All",
            "description": "The array of conditions where all should pass",
            "type": "array",
            "items": {
                "$ref": "#/definitions/condition"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "condition": {
            "title": "Condition",
            "description": "The generic container for conditions",
            "type": "object",
            "oneOf": [
                {
                    "$ref": "#/definitions/condition:platform"
                },
                {
                    "$ref": "#/definitions/condition:manager"
                },
                {
                    "$ref": "#/definitions/condition:package"
                }
            ]
        },
        "condition:platform": {
            "$ref": "./types.json#/platform#/definitions/ref"
        },
        "condition:manager": {
            "$ref": "./types.json#/manager#/definitions/ref"
        },
        "condition:package": {
            "$ref": "./package.json#/definitions/ref"
        }
    }
}