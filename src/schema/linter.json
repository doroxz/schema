{
    "$schema": "https://schema.linterhub.com/schemaver.json#",
    "$id": "https://schema.linterhub.com/linter.json#",
    "$version": "0.0.0",
    "title": "Linter",
    "description": "The meta information about linter",
    "type": "object",
    "allOf": [
        {
            "$ref": "./schemaver.json#/definitions/object"
        },
        {
            "$ref": "#/definitions/linter"
        }
    ],
    "definitions": {
        "glob": {
            "title": "Glob",
            "description": "The pattern that specify sets of filenames with wildcard characters",
            "type": "string"
        },
        "extension": {
            "$ref": "#/definitions/glob",
            "title": "Extension",
            "description": "The filename extension",
            "type": "string",
            "pattern": "^\\..*"
        },
        "linter": {
            "title": "Linter",
            "description": "The meta information about linter",
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "./package.json#/definitions/id"
                },
                "language": {
                    "title": "Language",
                    "description": "The array of supported languages",
                    "type": "array",
                    "default": [
                        "All"
                    ],
                    "items": {
                        "$ref": "./types.json#/definitions/language"
                    },
                    "uniqueItems": true
                },
                "extension": {
                    "title": "Extension",
                    "description": "The array of supported file extensions",
                    "type": "array",
                    "default": [],
                    "items": {
                        "$ref": "#/definitions/extension"
                    },
                    "uniqueItems": true
                },
                "config": {
                    "title": "Configuration",
                    "description": "The array of glo patters of config file",
                    "type": "array",
                    "default": [],
                    "items": {
                        "$ref": "#/definitions/glob"
                    },
                    "uniqueItems": true
                }
            },
            "required": [
                "id"
            ]
        }
    }
}