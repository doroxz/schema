{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "https://schema.linterhub.com/type/url.json#",
    "title": "URL",
    "description": "The URL object",
    "oneOf": [
        {
            "$ref": "#/definitions/urls"
        }
    ],
    "additionalItems": false,
    "definitions": {
        "uri": {
            "title": "URL",
            "description": "The URL in URI format",
            "type": "string",
            "format": "uri"
        },
        "type": {
            "title": "URL type",
            "description": "The type of URL",
            "type": "string",
            "default": "homepage",
            "enum": [
                "documentation",
                "download",
                "issues",
                "source",
                "repository",
                "homepage",
                "unknown"
            ]
        },
        "object": {
            "title": "URL object",
            "description": "The URL with type specified",
            "type": "object",
            "properties": {
                "url": {
                    "title": "URL",
                    "description": "The URL in URI format",
                    "$ref": "#/definitions/uri"
                },
                "type": {
                    "title": "Type",
                    "description": "The type of url",
                    "$ref": "#/definitions/type"
                }
            },
            "required": [
                "url"
            ],
            "additionalProperties": false
        },
        "complex": {
            "title": "URL",
            "description": "The URL as URI or as URI and type",
            "oneOf": [
                {
                    "$ref": "#/definitions/uri"
                },
                {
                    "$ref": "#/definitions/object"
                }
            ]
        },
        "urls": {
            "title": "URL(s)",
            "description": "The URL or array of URLs",
            "oneOf": [
                {
                    "$ref": "#/definitions/complex"
                },
                {
                    "title": "URLs",
                    "description": "The array of URLs",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/complex"
                    },
                    "additionalProperties": false
                }
            ]
        }
    }
}
